<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_name_store_tree" model="ir.ui.view">
        <field name="name">name.store.tree</field>
        <field name="model">name.store</field>
        <field name="arch" type="xml">
            <tree string="Name Store">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_name_store_form" model="ir.ui.view">
        <field name="name">name.store.form</field>
        <field name="model">name.store</field>
        <field name="arch" type="xml">
            <form string="Name Store">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_name_store" model="ir.actions.act_window">
        <field name="name">Name Store</field>
        <field name="res_model">name.store</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register names here.
            </p>
        </field>
    </record>

    

</odoo>